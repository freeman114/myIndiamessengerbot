<html>

<head>
    <title>Timeslot</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="javascript/timeslot.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <!-- <style>
        body {
            background-color:lavender;
        }
    </style> -->
    <style>
        div.col-sm-8 {
            background-color: white;
            width: 100px;
            height: 250px;
            overflow: auto;
        }

        img {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        div {
            margin-top: 10%;
            margin-bottom: 10%;
        }

        .btn-light:hover {
            background-color: lavender;
        }

        .btn-light {
            background-color: rgb(149, 149, 163) !important;
        }

        .btn-light.active,
        .btn-light:active {
            background-color: rgb(129, 129, 163) !important;
            border-color: greenyellow !important;
        }
    </style>
</head>

<body style="background-color:lavender;">

    <div class="container">
        <div class="panel-header" style="margin: 10px;">

        </div>

        <div class="row">
            <div class="col-sm-2 col-md-3 col-2"></div>
            <div class="col-sm-8 col-md-6 col-8" id="myimg">
                <div class="list-group">
                    <% array.forEach(time =>{ %>
                    <button type="button" class="btn btn-light btn-block" id="<%= time %>"
                        onclick="set_timeslot(this.id)">&nbsp;&nbsp;&nbsp;&nbsp;
                        <%= time %>&nbsp;&nbsp;&nbsp;&nbsp; </button>
                    <% }); %>

                </div>
            </div>
            <div class="col-sm-2 col-md-3 col-2"></div>
        </div>
        <img id="myqrcode">
        <div class="panel-footer">
            <br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <button type="button" class="btn btn-success" id="<%= id %>"
                onclick="save_timeslot(this.id)">OK</button>&nbsp;&nbsp;&nbsp;&nbsp;
            <a download="QRcode.png" href="" class="btn btn-info" id="download">Download</a>&nbsp;&nbsp;&nbsp;&nbsp;
            <button type="button" class="btn btn-secondary" onclick="close_webview()">CLOSE</button><br>
        </div>



    </div>

</body>

</html>